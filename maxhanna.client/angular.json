{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "maxhanna.client": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "standalone": false
        },
        "@schematics/angular:directive": {
          "standalone": false
        },
        "@schematics/angular:pipe": {
          "standalone": false
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/maxhanna.client",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/sitemap.xml",
              "src/assets/", 
              "src/firebase-messaging-sw.js"
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2.7mb",
                  "maximumError": "3mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "17kb",
                  "maximumError": "17kb"
                }
              ],
              "outputHashing": "all",
              "sourceMap": false,
              "extractLicenses": true
            },
            "development": {
              "optimization": false,
              "extractLicenses": true,
              "sourceMap": false
            }
          },
          "defaultConfiguration": "development"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "maxhanna.client:build:production",
              "port": 443,
              "host": "0.0.0.0",
              "ssl": true,
              "sslCert": "ssl/bughosted_com.crt",
              "sslKey": "ssl/bughosted_com.key",
              "liveReload": false,
              "watch": false,
              "hmr": false
            },
            "development": {
              "buildTarget": "maxhanna.client:build:development",
              "liveReload": true,
              "watch": true,
              "hmr": false
            },
            "test": {
              "buildTarget": "maxhanna.client:build:development",
              "port": 8000,
              "host": "0.0.0.0",
              "ssl": false,
              "liveReload": true,
              "watch": true,
              "hmr": true
            },
            "http": {
              "buildTarget": "maxhanna.client:build:production",
              "port": 80,
              "host": "0.0.0.0",
              "ssl": false,
              "liveReload": false,
              "watch": false,
              "hmr": false
            },
            "https": {
              "buildTarget": "maxhanna.client:build:production",
              "port": 443,
              "host": "0.0.0.0",
              "ssl": true,
              "sslCert": "ssl/bughosted_com.crt",
              "sslKey": "ssl/bughosted_com.key",
              "liveReload": false,
              "watch": false,
              "hmr": false
            }
          },
          "defaultConfiguration": "production",
          "options": {
            "proxyConfig": "src/proxy.conf.js"
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "maxhanna.client:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              "src/favicon.ico",
              "src/sitemap.xml",
              "src/assets", 
              "src/firebase-messaging-sw.js"
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": [],
            "karmaConfig": "karma.conf.js"
          }
        }
      }
    }
  }
}
